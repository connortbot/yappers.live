{
  "openapi": "3.1.0",
  "info": {
    "title": "Wukong API",
    "description": "Yappers backend.",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [],
        "operationId": "ping",
        "responses": {
          "200": {
            "description": "ping",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/game/create": {
      "post": {
        "tags": [
          "game_controller"
        ],
        "operationId": "create_game",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Create game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateGameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/game/join": {
      "post": {
        "tags": [
          "game_controller"
        ],
        "operationId": "join_game",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JoinGameRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Join game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JoinGameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ws/{game_id}/{player_id}": {
      "get": {
        "tags": [
          "websocket_controller"
        ],
        "operationId": "websocket_handler",
        "responses": {
          "200": {
            "description": "Websocket connection",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateGameRequest": {
        "type": "object",
        "required": [
          "username"
        ],
        "properties": {
          "username": {
            "type": "string"
          }
        }
      },
      "CreateGameResponse": {
        "type": "object",
        "required": [
          "game"
        ],
        "properties": {
          "game": {
            "$ref": "#/components/schemas/Game"
          }
        }
      },
      "ErrorCode": {
        "oneOf": [
          {
            "type": "string",
            "enum": [
              "GameNotFound"
            ]
          },
          {
            "type": "string",
            "enum": [
              "GameFull"
            ]
          },
          {
            "type": "string",
            "enum": [
              "PlayerNotFound"
            ]
          },
          {
            "type": "string",
            "enum": [
              "PlayerAlreadyExists"
            ]
          },
          {
            "type": "string",
            "enum": [
              "InvalidGameCode"
            ]
          },
          {
            "type": "string",
            "enum": [
              "PlayerAlreadyInGame"
            ]
          },
          {
            "type": "object",
            "required": [
              "InvalidInput"
            ],
            "properties": {
              "InvalidInput": {
                "type": "string"
              }
            }
          },
          {
            "type": "string",
            "enum": [
              "InternalServerError"
            ]
          }
        ]
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "error",
          "message"
        ],
        "properties": {
          "error": {
            "$ref": "#/components/schemas/ErrorCode"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Game": {
        "type": "object",
        "required": [
          "id",
          "code",
          "host_id",
          "players",
          "max_players",
          "created_at"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "created_at": {
            "type": "integer",
            "format": "int32"
          },
          "host_id": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "max_players": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Player"
            }
          }
        }
      },
      "JoinGameRequest": {
        "type": "object",
        "required": [
          "username",
          "game_code"
        ],
        "properties": {
          "game_code": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "JoinGameResponse": {
        "type": "object",
        "required": [
          "game"
        ],
        "properties": {
          "game": {
            "$ref": "#/components/schemas/Game"
          }
        }
      },
      "Player": {
        "type": "object",
        "required": [
          "id",
          "username"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      }
    }
  }
}
